<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seboid.udem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="UdeM Nouvelles" >
        <activity
            android:name=".UdeMActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UdeMRssListActivity"
            android:label="UdeM|Nouvelles" >
        </activity>
        <activity
            android:name=".UdeMWebActivity"
            android:label="UdeM|Nouvelles" >
        </activity>
        <activity
            android:name=".UdeMRssFeedActivity"
            android:label="@string/app_udemrssFeedName" >
        </activity>
        <activity
            android:name=".UdeMRssCatActivity"
            android:label="@string/app_udemrssCatName" >
        </activity>
        <activity
            android:name=".UdeMRssFeedCatActivity"
            android:label="@string/app_udemrssFeedCatName" >
        </activity>
        <activity
            android:name=".myPreferencesActivity"
            android:label="@string/app_myPreferencesName" >
        </activity>

        <service android:name=".RssService" >
        </service>

        <receiver android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".NetworkReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".UdeMWidget"
            android:label="UdeM widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
    </application>
</manifest>