<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="5dp" android:paddingBottom="4dp" android:paddingRight="5dp" android:paddingTop="4dp" android:id="@+id/row">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/rowcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cinema"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff9000" />

        <TextView
            android:id="@+id/rowcatcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="il y a 2 jours"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#33b505" />

    </LinearLayout>

    <TextView
        android:id="@+id/rowtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="un film chouette"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>