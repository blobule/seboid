<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="5dp" android:paddingBottom="4dp" android:paddingRight="5dp" android:paddingTop="4dp" android:id="@+id/linlayout1">

    <LinearLayout
        android:id="@+id/feedinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#ff666666"
        android:onClick="actionFeed" >

        <CheckBox
            android:id="@+id/rowfeedcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:checked="true"
            android:onClick="actionCheck" />

        <TextView
            android:id="@+id/rowfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/rowfeedcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#008080" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/catinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="actionCat" >

        <TextView
            android:id="@+id/rowcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="cinema"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#909000" />

        <TextView
            android:id="@+id/rowcatcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#008080" />

    </LinearLayout>

</LinearLayout>