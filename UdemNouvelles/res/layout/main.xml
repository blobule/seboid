            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mise a jour automatique"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center_vertical" android:layout_marginRight="15dp"/>

        <ToggleButton
            android:id="@+id/serviceToggle"
            android:layout_width="wrap_content"
